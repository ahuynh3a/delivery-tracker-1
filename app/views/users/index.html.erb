<h1>Delivery Tracker</h1>

<p> Know if something gets lost in the mail.</p>

<hr>

<h2> Expecting a package?</h2>

<form action="/insert_delivery" method="post">
  <div>
    <label for="description_box">
      Description
    </label>

    <input type="text" id="description_box" name="query_description">
  </div>

  <div>
    <label for="supposed_to_arrive_on_box">
      Supposed to arrive on
    </label>

    <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
  </div>

  <div>
    <label for="details_box">
      Details
    </label>

    <textarea id="details_box" name="query_details" rows="3"></textarea>
  </div>

  <button>
    Log delivery
  </button>
</form>
<hr>

<div class = "waiting_on">
  <h2>Waiting on</h2>
  <% @list_of_waiting_deliveries.each do |delivery|%>
    <ul>
      <li>
        <div>
          <%= delivery.description %>
        </div>
        <div>
          Supposed to arrive on <%= delivery.supposed_to_arrive_on %>
        </div>
        <div>
          <%= delivery.details %>
        </div>
        <div>
          <form action ="/modify_delivery/<%=delivery.id%>" method ="post">
            <input type ="hidden" name="query_arrived" value="true">
            <button type="submit"> Mark as received</button>
          </form>
        </div>
      </li>
    </ul>
  <% end %>
</div>

<hr>

<div class = "received">
  <h2>Received</h2>

  <% @list_of_arrived_deliveries.each do |delivery|%>
    <ul>
      <li>
        <div>
          <%= delivery.description %>
        </div>
        <div>
          <small> Updated <a href ="/delete_delivery/<%=delivery.id%>">Delete</a></small>
        </div>
      </li>
    </ul>
  <% end %>
</div>
